<%= render "jumbotron" %>
<%= render 'category_selector', categories: @categories %>
<%= render 'items_container', items: @items %>

<script>
  $(document).ready(() => {
    $("#category").change(() => {
      let category_id = $("#category").val();
      let url = "/categories/" + category_id + "/items";
      if (category_id == '') {
        url = '/items';
      }

      const Http = new XMLHttpRequest();
      Http.open("GET", url, true);
      Http.send();

      Http.onreadystatechange = (e) => {
        result = Http.responseText;
        $('#items_container').remove(); 
        let items_container = $(result).filter('#items_container')[0];
        $('#category_selector').after(items_container);
      }
    });
  });
</script>