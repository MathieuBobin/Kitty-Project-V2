<%= render "items/jumbotron"%>

<div class="container-fluid mt-4">
    <h1 class="h3 mb-3 font-weight-normal text-center">Les photos de chatons disponibles actuellement:</h1><br>
    <div class="row justify-content-center">
    <%Item.all.each do |x|%>
    <div class="col-auto mb-4">
      <div class="card mb-4">
        <h3 class="card-header"> Photo nº<%=x.id%></h3>
        <img style="height: 100%; width: 100%; display: block;" src="<%=x.image_url%>" alt="Card image">
        <div class="card-body">
          <p class = "card-text"><%=x.title%></p>
          <p class="card-text">Prix de la photo: <%=x.price%> euros</p>
        </div>
        <div class="card-body">
          <a href="items/<%=x.id%>" class="card-link">Accéder à la fiche <a>
          <button type="button" class="btn btn-white btn-sm border border-dark">
              <%= link_to 'Ajouter au panier', item_cart_items_path(x.id), method: :post%>
            </button>

        </div>
      </div>
    </div>
  <%end %>
</div> 





